<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../public/styles.css">
    <title>Task Manager</title>
</head>
<body>
    <h1>Task Manager</h1>
    <div class="form">
        <form action="/tasks" method="POST">
            <fieldset>
                <legend>Add New Task</legend>
                <input type="text" name="name" placeholder="New task name" required>
                <input type="text" name="description" placeholder="New task description" required>
                <input type="date" name="date" required>
                <button type="submit">Add Task</button>
            </fieldset>         
        </form>
    </div>
    

    <ul>
        <% tasks.forEach(task => { %>
            <li>
                <div class="task">
                    <div class="task-details">
                        <h3 class="task-name"><%= task.carMake %></h3>
                        <h5>Date: <%= task.carDate %></h5>
                        <p class="task-desc">Weight: <%= task.carWeight %> lbs</p>
                        <p class="task-desc">Location: <%= task.carLocation %></p>
                        <p class="task-desc">Door Type: <%= task.carDoor %></p>
                    </div>
                    <div class="task-buttons">
                        <button class="edit-button"><a href="/tasks/<%= task.id %>/edit">Edit</a></button>
                        <form action="/tasks/<%= task.id %>/delete" method="POST" style="display:inline;">
                            <button class="delete-button" type="submit">Delete</button>
                        </form>
                    </div>
                </div>
            </li>
        <% }); %>
    </ul>
</body>
</html>