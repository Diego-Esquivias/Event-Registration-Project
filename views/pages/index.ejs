<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Including EJS Head -->
        <%- include("../partials/head"); %>
    <title>EJS HOME-PAGE</title>
</head>
<body className="container">
    <header>
        <!-- Including EJS header -->
        <%- include('../partials/header', {variant: 'compact'}); %>
    </header>

    <main>
        <div className="jumbotron">
            <h1>This is Pretty Awesome</h1>
            <p>Welcome to templating using EJS</p>

            <!-- New: EJS Variables -->
            <h2>Using variables</h2>
            <p>This is my fervent <% tagline %></p>

            <!-- New: EJS + JS -->
            <ul>
                <!-- Opening JS in EJS TAG -->
                <% cars.forEach(function(car) { %>
                    <li>
                        <strong><%= car.carMake %></strong><br>
                        <em>Number of Doors</em>: <%= car.carDoor %> <br>
                        <em>Weight of Car</em>: <%= car.carWeight+' lbs' %> <br>
                        <em>Location & Date</em>: <%= car.carLocation+', '+car.carDate %>
                    </li>
                <!-- Closing JS section in EJS TAG -->
                <% }); %>
            </ul>
        </div>
    </main>

    <footer>
        <!-- Including EJS footer -->
        <%- include('../partials/footer'); %>
    </footer>
</body>
</html>